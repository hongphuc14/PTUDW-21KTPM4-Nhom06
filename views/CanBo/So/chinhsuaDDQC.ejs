<%- include('../../partial/headerSo.ejs') %>
<%- include('../../partial/sidebarSo.ejs') %>
    <div class="content">
        <div class="title-container">
            <span class="title-icon"><i class="fas fa-map-marked-alt"></i></span>
            <span class="title-text"><h1><a href="/diemdatquangcao">Quản lí điểm đặt quảng cáo</a> / Thông tin chi tiết</h1></span>
        </div>
       
        <form class="form" id="edit-ads-location">
            <legend><i class="fas fa-info-circle"></i> Thông tin điểm đặt quảng cáo</legend>
            <div class="input-container">
                <div class="input-field">
                    <label for="id-ads-location">ID Điểm đặt</label>
                    <input type="text" class="disabled" id="id-ads-location" name="id_ads_location" value="<%= id %>" readonly>
                    <span class="tooltiptext">Không thể chỉnh sửa ID</span>
                </div>
                <div class="input-field">
                    <label for="address">Địa chỉ</label>
                    <input type="text" class="disabled" id="address" name="address" readonly>
                    <span class="tooltiptext">Chỉnh sửa bằng tọa độ</span>
                </div>
                <div class="input-field">
                    <label for="ward">Phường</label>
                    <input type="text" class="disabled" id="ward" name="ward" readonly>
                    <span class="tooltiptext">Chỉnh sửa bằng tọa độ</span>
                </div>
                <div class="input-field">
                    <label for="district">Quận</label>
                    <input type="text" class="disabled" id="district" name="district" readonly>
                    <span class="tooltiptext">Chỉnh sửa bằng tọa độ</span>
                </div> 
                <div class="input-field">
                    <label for="coordinates">Tọa độ</label>
                    <input type="text" id="coordinates" name="coordinates" readonly>
                </div>
                <div class="input-field">
                    <label for="ads-location-type">Loại vị trí</label>
                    <select name="ads_location_type" id="ads-location-type" required>
                      <option value="">Chọn loại vị trí</option>
                    </select>
                </div>
                <div class="input-field">
                    <label for="ads-type">Hình thức quảng cáo</label>
                    <select name="ads_type" id="ads-type" required>
                      <option value="">Chọn hình thức quảng cáo</option>
                    </select>
                </div> 
                <div class="input-field">
                    <label for="is-zoning">Tình trạng quy hoạch</label>
                    <select name="is_zoning" id="is-zoning" required>
                        <option value="">Chọn tình trạng</option>
                        <option value="1">Đã quy hoạch</option>
                        <option value="0">Chưa quy hoạch</option>
                    </select>
                </div>
                <div class="input-field image span-4">
                    <label for="image">Hình ảnh minh họa</label>
                    <div class="img-container">
                        <img src="../../../public/image/image-placeholder.jpg" alt="" id="image-preview">
                        <label for="image" class="img-button">Thay đổi</label>
                        <input type="file" id="image" name="image" accept="image/*" >
                        <div class="dark-background"></div>
                    </div>
                    
                </div>
            </div>
            <div class="button-container">
                <button type="button" value="delete" class="button button-delete">Xóa điểm đặt</button>
                <button type="submit" value="update" class="button">Lưu thay đổi</button>
            </div>
        </form>

        <div class="popupmap" id="select-location-map">
            <div class="popupmap-header">
                <span class="title">Xác định vị trí điểm đặt</span>
                <span class="search-bar">
                    <input type="text" id="search">
                    <i class="fas fa-search"></i>
                </span>
            </div>
            <div class="map" id="map"></div>
            <div class="popupmap-footer">
                <div class="chosen-address" id="chosen-address" style="z-index: 1000;"></div>
                <button>Xác nhận</button>
            </div>
        </div>

    </div>
</div>
